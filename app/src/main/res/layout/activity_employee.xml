<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.assesment.pos7eleven.EmployeeActivity"
    android:background="@color/background">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Empleado"
        android:id="@+id/employeeID"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20sp"
        android:textSize="25sp"
        android:textColor="@color/title"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="70sp"
        android:paddingLeft="20sp"
        android:paddingRight="20sp"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nombre:"
            android:textSize="20sp"
            android:id="@+id/nameText"
            android:textColor="@color/text"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Usuario:"
            android:textSize="20sp"
            android:layout_marginTop="40sp"
            android:id="@+id/usernameText"
            android:textColor="@color/text"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="PosiciÃ³n:"
            android:textSize="20sp"
            android:layout_marginTop="40sp"
            android:id="@+id/positionText"
            android:textColor="@color/text"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tienda:"
            android:textSize="20sp"
            android:layout_marginTop="40sp"
            android:id="@+id/storeText"
            android:textColor="@color/text"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Activo:"
            android:textSize="20sp"
            android:layout_marginTop="40sp"
            android:id="@+id/isActiveText"
            android:textColor="@color/text"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40sp">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Eliminar"
                android:id="@+id/deleteEmployeeButton"
                android:background="@color/button"
                android:textColor="@color/focus"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Editar"
                android:id="@+id/editEmployeeButton"
                android:layout_marginLeft="60sp"
                android:background="@color/button"
                android:textColor="@color/background"/>
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>
