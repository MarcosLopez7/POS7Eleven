<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.assesment.pos7eleven.RegisterActivity"
    android:background="@color/background">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Product Register"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="65sp"
        android:textSize="25sp"
        android:textColor="@color/title"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="20sp"
        android:paddingRight="20sp"
        android:orientation="vertical"
        android:layout_centerVertical="true">

        <EditText
            android:id="@+id/orderIDEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Order ID"
            android:inputType="numberSigned"
            android:textColorHint="@color/text"
            android:textColor="@color/text"
            android:shadowColor="@color/focus"/>

        <Button
            android:id="@+id/scannRegisterButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40sp"
            android:text="Scan Product"
            android:background="@color/button"
            android:textColor="@color/background"/>

    </LinearLayout>
</RelativeLayout>
